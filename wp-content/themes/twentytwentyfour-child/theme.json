{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#667eea",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#764ba2",
                    "name": "Secondary"
                },
                {
                    "slug": "dark",
                    "color": "#1a202c",
                    "name": "Dark"
                },
                {
                    "slug": "dark-secondary",
